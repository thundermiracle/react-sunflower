{
    "compilerOptions": {
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "config/*": ["config/*"],
            "lib/*": ["src/lib/*"],
            "core/*": ["src/core/*"],
            "client/*": ["src/client/*"],
            "views/*": ["src/client/views/*"],
            "styles/*": ["src/client/views/styles/*"],
            "components/*": ["src/client/views/components/*"]
        }
