{
  "presets": [
    "next/babel"
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "root": [
          "./src/"
        ],
        "alias": {
          "lib": "./src/lib",
          "core": "./src/core",
          "views": "./src/client/views",
          "styles": "./src/client/views/styles",
          "components": "./src/client/views/components",
          "hoc": "./src/client/views/hoc"
        }
      }
    ]
  ],
  "ignore": ["node_modules/**"]
}